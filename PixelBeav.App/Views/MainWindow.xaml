<Window x:Class="PixelBeav.App.Views.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:vm="clr-namespace:PixelBeav.App.ViewModels" mc:Ignorable="d" UseLayoutRounding="True" SnapsToDevicePixels="True"  Title="PixelBeav" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Width="1200" Height="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Thumbnails only (no text/buttons) -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0,0,12,0" ClipToBounds="False">
            <ItemsControl ItemsSource="{Binding FilteredGames}" Width="672" HorizontalAlignment="Left">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate><UniformGrid Columns="2"/></ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    

<DataTemplate>
    <Border Margin="8" CornerRadius="10" BorderThickness="1" BorderBrush="#33000000" Width="320" Height="150" SnapsToDevicePixels="True">
        <Border.Background>
            <ImageBrush ImageSource="{Binding HeaderImageUri, FallbackValue=/Assets/placeholder.png}" Stretch="Fill"/>
        </Border.Background>
        <Grid ClipToBounds="False">
            <!-- Full-tile select button at back -->
            <Button Background="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand"
                    Command="{Binding DataContext.SelectGameCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    CommandParameter="{Binding}"
                    Panel.ZIndex="0" />
            <!-- Title overlay -->
            <TextBlock Text="{Binding Title}" FontWeight="Bold" Margin="6"
                       HorizontalAlignment="Left" VerticalAlignment="Top"
                       Foreground="White" TextTrimming="CharacterEllipsis" MaxWidth="260" Panel.ZIndex="1">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="4" Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>
            <!-- Delete button -->
            <Button Width="20" Height="20" Padding="0"
                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,3,3,0"
                    Command="{Binding DataContext.DeleteGameCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    CommandParameter="{Binding}"
                    Background="{x:Null}" BorderBrush="{x:Null}" ToolTip="Entfernen" Panel.ZIndex="2">
                <Image Source="pack://application:,,,/PixelBeav.App;component/Assets/close.png" Width="20" Height="20" Stretch="None"/>
            </Button>
        </Grid>
    </Border>
</DataTemplate>


                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Right: Details -->
        <Grid Grid.Column="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,12"><Button Content="Blacklist anzeigen" Command="{Binding ShowBlacklistCommand}" Margin="0,0,8,0"/>
                <Button Content="Steam einlesen" Command="{Binding ImportSteamCommand}" Margin="0,0,8,0"/>
                <Button Content="Duplikate entfernen" Command="{Binding DeduplicateCommand}" Margin="0,0,8,0"/>
                <Button Content="Ordner wählen" Command="{Binding ChooseFolderCommand}" Margin="0,0,8,0"/>
                <Button Content="Neu scannen" Command="{Binding RescanCommand}" Margin="0,0,8,0"/>
                <Button Content="Blacklist…" Command="{Binding ShowBlacklistCommand}" Margin="0,0,8,0"/>
                <CheckBox Content="Nur Games" IsChecked="{Binding OnlyGames}" VerticalAlignment="Center"/>
            </StackPanel>

            <Image Grid.Row="1" Height="200" Stretch="Uniform"
                   Source="{Binding SelectedGame.HeaderImageUri, FallbackValue=/Assets/placeholder.png}" />

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <TextBlock Text="{Binding SelectedGame.Title}" FontSize="20" FontWeight="Bold" Margin="0,8,0,4"/>
                    <TextBlock Text="{Binding SelectedGame.ShortDescription}" TextWrapping="Wrap" />
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,12,0,0">
                <Button Content="Ordner öffnen" Command="{Binding OpenFolderCommand}" Margin="0,0,8,0"/>
                <Button Content="Thumbnails…" Command="{Binding OpenThumbnailsCommand}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
