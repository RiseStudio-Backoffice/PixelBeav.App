<Window x:Class="PixelBeav.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PixelBeav" Width="1200" Height="800"
        TextOptions.TextRenderingMode="ClearType"
        TextOptions.TextFormattingMode="Display">
    <DockPanel>
        <Border DockPanel.Dock="Top" Padding="6" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBox Width="280" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <Button Grid.Column="1"
                        x:Name="GearButtonTop"
                        Content="⚙"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        Background="Transparent" BorderBrush="Transparent"
                        FontSize="18" Width="32" Height="28"
                        Click="Gear_Click"
                        ToolTip="Einstellungen">
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Blackliste anzeigen" Command="{Binding ShowBlacklistCommand}"/>
                            <Separator/>
                            <MenuItem Header="Kollektionen einfügen" Command="{Binding OpenCollectionsCommand}"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
            </Grid>
        </Border>

        <!-- Restliches Layout unverändert -->
    </DockPanel>
</Window>